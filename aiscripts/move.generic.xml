<?xml version='1.0' encoding='utf-8'?>
<diff>
  <remove sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='this.sector != $targetsector or (this.zone != $targetzone and (not @$endzone or this.zone != $endzone) and ($endintargetzone or @$targetzone.isclass.highway or this.ship.bboxdistanceto.[$positionspace, $position, $destination] gt 10km))']/do_if[@value='$intersector? and not @this.zone.isclass.highway and (@$waitforsubordinates or $waitforatgate or this.assignedcontrolled.iscapitalship)']/do_if[@value='not $waitforsubordinates? and not $waitforatgate.isoperational and not this.zone.isclass.highway']"/>
  <replace sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='this.sector != $targetsector or (this.zone != $targetzone and (not @$endzone or this.zone != $endzone) and ($endintargetzone or @$targetzone.isclass.highway or this.ship.bboxdistanceto.[$positionspace, $position, $destination] gt 10km))']/do_else/wait[@max='(not $bigship) * (5.1 - (this.ship.pilot.skill.piloting / 3))s']/@max">(not $bigship) * 0.1s</replace>
  <replace sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='not @$rotation']/@value">true</replace>
  <replace sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='true']/comment()[1]">
    <do_if value="not @$rotation">
      <!-- Only move if is not very close -->
      <do_if value="this.ship.distanceto.[$positionspace, $safepos] gt ([this.ship.size * 5, 10km].max)">
        <move_to object="this.ship" destination="$positionspace" uselocalhighways="$canuselocalhighways" abortpath="$abortpath" forcesteering="(not $bigship) and $forcesteering" forceposition="false" forcerotation="false" finishonapproach="false" commandaction="$changecommandaction" travel="not $noboost">
          <position value="$safepos"/>
        </move_to>
      </do_if>
      <do_elseif value="this.ship.distanceto.[$positionspace, $safepos] gt this.ship.size">
        <move_to object="this.ship" destination="$positionspace" uselocalhighways="$canuselocalhighways" abortpath="$abortpath" forcesteering="(not $bigship) and $forcesteering" forceposition="false" forcerotation="false" finishonapproach="false" commandaction="$changecommandaction">
          <position value="$safepos"/>
        </move_to>
      </do_elseif>
    </do_if>
  </replace>
  <replace sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='true']/do_if[@value='this.ship.distanceto.[$positionspace, $safepos] gt this.ship.size']">
    <do_elseif value="(this.ship.distanceto.[$positionspace, $safepos] gt ([this.ship.size * 5, 10km].max)) and (@$rotation)">
      <move_to object="this.ship" destination="$positionspace" uselocalhighways="$canuselocalhighways" abortpath="$abortpath" forcesteering="(not $bigship) and $forcesteering" forceposition="false" forcerotation="true" finishonapproach="false" commandaction="$changecommandaction" travel="not $noboost">
        <position value="$safepos"/>
        <rotation value="$rotation"/>
      </move_to>
    </do_elseif>
  </replace>
  <add sel="/aiscript/attention[@min='unknown']/actions/do_if[@value='true']">
    <do_else>
      <move_to object="this.ship" destination="$positionspace" uselocalhighways="$canuselocalhighways" abortpath="$abortpath" forcesteering="(not $bigship) and $forcesteering" forceposition="false" forcerotation="true" finishonapproach="false" commandaction="$changecommandaction">
        <position value="$safepos"/>
        <rotation value="$rotation"/>
      </move_to>
    </do_else>
  </add>
  <remove sel="/aiscript/attention[@min='unknown']/actions/do_else[4]"/>
</diff>
